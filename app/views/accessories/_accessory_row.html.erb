<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= accessory.accessory_name %></small></h4>
    </div>
    <div class="col-xs-4">
      <%= form_for order_item, remote: true do |f| %>

      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency accessory.cost %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :accessory_id, value: accessory.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <%= link_to 'Show', accessory_path(accessory.id) %>
      <% end %>
    </div>
  </div>
</div>