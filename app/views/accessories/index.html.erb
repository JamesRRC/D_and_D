<p id="notice"><%= notice %></p>

<h1>Accessories</h1>


<table>
  <thead>
    <tr>
      <th>Accessory</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <% @accessories.each do |accessory| %>
          <%= render "accessory_row", accessory: accessory, order_item: @order_item %>
        <% end %>
      </div>
    </div>
    <%= paginate @accessories %>
  </tbody>
</table>
<br>

