
<table>
  <thead>
    <tr>
      <th>Accessory</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accessories_search.each do |accessory_search| %>
      <tr>
        <td><%= accessory_search.accessory_name %></td>
        <td><%= accessory_search.description %></td>
        <td><%= number_to_currency accessory_search.cost %></td>
        <td><%= accessory_search.stock %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <td>Pix</th>
    </tr>
  </thead>
  <tbody>
  <% @hirelings.each do |hireling| %>
      <tr>
        <td><%= hireling.name %></td>
        <td><%= hireling.hire_class.class_name %></td>
        <% if hireling.image.present? %>
          <td>
            <%= image_tag hireling.image.url, width:200 %>
          </td>
        <% end %>

      </tr>
    <% end %>

  <% @hire_classes.each do |ind_hires| %>
      <tr>
        <td><%= ind_hires.name %></td>
        <td><%= ind_hires.hire_class.class_name %></td>
        <% if ind_hires.image.present? %>
          <td>
            <%= image_tag ind_hires.image.url, width:200 %>
           </td>
        <% end %>

      </tr>
    <% end %>

  </tbody>
</table>
