
<table>
  <thead>
    <tr>
      <th>Accessory</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accessories.each do |accessory| %>
      <tr>
        <td><%= accessory.accessory_name %></td>
        <td><%= accessory.description %></td>
        <td><%= number_to_currency accessory.cost %></td>
        <td><%= accessory.stock %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <td>Pix</th>
    </tr>
  </thead>
  <tbody>
  <% @hirelings.each do |hireling| %>
      <tr>
        <td><%= hireling.name %></td>
        <td><%= hireling.hire_class.class_name %></td>
        <% if hireling.image.present? %>
          <td>
            <%= image_tag hireling.image.url, width:200 %>
          </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

