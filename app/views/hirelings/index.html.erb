<h1>Hirelings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hirelings.each do |hireling| %>
      <tr>
        <td><%= hireling.name %></td>
        <td><%= hireling.hire_class.class_name %></td>
        <% if hireling.image.present? %>
          <td>
            <%= image_tag hireling.image.url, width:200 %>
          </td>
        <% end %>

        </tr>
    <% end %>
  </tbody>
</table>

